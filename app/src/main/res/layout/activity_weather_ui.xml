<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#006600"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikey.maps.weatherUI">

    <TextView
        android:id="@+id/cityText"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="Oswego, NY"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_below="@+id/cityText"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tempText"
        android:textColor="#fff"
        android:text="32 Deg"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cityText"
        android:textSize="42sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/windText"
        android:textColor="#fff"
        android:text="Wind"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/weatherIcon"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cloudText"
        android:textColor="#fff"
        android:text="Cloud"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/windText"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pressureText"
        android:textColor="#fff"
        android:text="Pressure"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cloudText"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/humidText"
        android:textColor="#fff"
        android:text="Humidity"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/pressureText"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/updateText"
        android:textColor="#fff"
        android:text="Last Updated"
        android:layout_marginTop="225dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pressureText"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
